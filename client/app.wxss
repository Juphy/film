/**app.wxss**/
@import 'weui.wxss';
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
/*隐藏滚动条*/

::-webkit-scrollbar{

width: 0;

height: 0;

color: transparent;

}

page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  border-top: 2rpx solid #eaeaea; 
}

.page-body {
  padding: 20rpx 0;
}

.btn-area{
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.tc{
  text-align: center;
}

.publicitylist-line{
  width: 100%;
  height: 2rpx;
  background-color: #eaeaea
}