.tab {
  display: flex;
  flex-direction: column;
}

.tab-nav {
  height: 80rpx;
  background: #fff;
  border-bottom: 0.5rpx dotted #eaeaea;
  display: flex;
  line-height: 79rpx;
  position: relative;
}

.tab-line {
  position: absolute;
  left: 0;
  bottom: -1rpx;
  height: 4rpx;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-line-i {
  height: 4rpx;
  width: 100rpx;
  background: #56bdac;
}

.tab-content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
}

.swiper-box {
  background: #eaeaea;
}

.doing-activity-item {
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 10rpx;
}

.doing-activity-item-title {
  font-size: 28rpx;
  color: #333;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.doing-activity-item-state {
  font-size: 24rpx;
  color: #939393;
  display: flex;
  justify-content: flex-end;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.partake-record {
  display: flex;
  flex-direction: column;
  background-color: #eaeaea;
}

.partake-record-title {
  font-size: 28rpx;
  color: #333;
  justify-content: center;
}

.partake-record-item {
  margin-top: 30rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  background-color: #fff;
  border-radius: 25rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.partake-record-date-del {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.partake-record-del {
  width: 80rpx;
  height: 80rpx;
}

.partake-record-date {
  font-size: 24rpx;
  flex-grow: 1;
}

.partake-record-line {
  width: 100%;
  height: 2rpx;
  background-color: #eaeaea;
}

.partake-record-film-name {
  font-size: 24rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.partake-record-film-address {
  font-size: 24rpx;
  color: #939393;
  margin-bottom: 30rpx;
}

.partake-record-film-demo {
  font-size: 24rpx;
  color: #939393;
  margin-top: 30rpx;
}

.partake-record-images {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: start;
}

.partake-record-images-item {
  width: 170rpx;
  height: 170rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
}

.pratake-record-detail {
  width: 100%;
  height: 98rpx;
  background-color: #56bdac;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
}
