.address-item-name-phone {
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
    margin-right: 30rpx;
    margin-left: 30rpx;
    font-size: 28rpx;
    color: #333;
}

.address-item-name {
    flex-grow: 1;
    font-weight: 700;
}

.address-item-phone {
    font-weight: 700;
}

.address-item-address {
    font-size: 24rpx;
    padding-right: 30rpx;
    padding-left: 30rpx;
}

.address-item-line {
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    width: 100%;
    height: 2rpx;
    background-color: #eaeaea;

}

.address-item-menu {
    margin-left: 30rpx;
    margin-right: 30rpx;
    font-size: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-bottom: 30rpx;
}

.address-item-default {
    width: 24rpx;
    height: 24rpx;
    margin-right: 20rpx;
}

.address-item-edit {
    display: flex;
    flex-direction: row;
    align-items: center;
}


.address-item-edit-image {
    width: 30rpx;
    height: 31rpx;
    margin-right: 10rpx;
    margin-left: 20rpx;
}

.address-item-default-text {
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    align-items: center;
}

.address-item-fg-line {
    width: 100%;
    height: 20rpx;
    background-color: #eaeaea;

}

.address-item-add {
    width: 100%;
    height: 98rpx;
    background-color: #56bdac;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

}