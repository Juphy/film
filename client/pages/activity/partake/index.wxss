.partake {
  display: flex;
  flex-direction: column;
  margin-right: 60rpx;
  margin-left: 60rpx;
  font-size: 24rpx;
}

.partake-date-picker {
  margin-top: 80rpx;
}

.partake-line {
  background: #eaeaea;
  height: 2rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.partake-add-icon {
  width: 93rpx;
  height: 93rpx;
}

.partake-add {
  width: 198rpx;
  height: 198rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #eaeaea;
  margin-top: 10rpx;
}

.partake-demo {
  background: #eaeaea;
  padding: 20rpx;
  margin-bottom: 30rpx;
  height: 200rpx;
}

.partake-submit {
  position: fixed;
  bottom: 0;
  width: 100vw;
  background: #56bdac;
  color: #fff;
  font-size: 28rpx;
  border-radius: 0;
  margin: 0rpx;
}

.partake-item-pic {
  width: 198rpx;
  height: 198rpx;
  margin-top: 10rpx;
  margin-right: 13rpx;
}

.partake-pic {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
}

button::after{
  border: none
}

.userinfo-red-point {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background-color: #56bdac;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 18rpx;
    color: #fff;
    z-index: 100;
    position: absolute; 
    margin-left: 165rpx;
    margin-top: 5rpx;
}

