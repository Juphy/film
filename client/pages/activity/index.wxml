<view style="padding-top: 60px">

<view class="weui-search-bar" style="position: fixed;top: 0;left: 0;right:0;height: 60px;z-index:9;background:#fff">
  <view class="weui-search-bar__form">
    <view class="weui-search-bar__box">
      <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
      <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" bindinput='inputValueChange' focus="{{inputShowed}}" bindconfirm="inputTyping" />
      <view class="weui-icon-clear" wx:if="{{inputVal.length}}" bindtap="clearInput">
        <icon type="clear" size="14"></icon>
      </view>
    </view>
    <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
      <icon class="weui-icon-search" type="search" size="14"></icon>
      <view class="weui-search-bar__text">搜索</view>
    </label>
  </view>
  <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">搜索</view>
</view>

<scroll-view>
  <block wx:for="{{activityList}}">
    <view id="{{item.id}}" bindtap='onClickItem' class='activitylist-item'>

      <block wx:if="{{item.end_day >nowDate  && item.status==1}}">
        <image mode='aspectFit' class='activitylist-item-image' style='width: {{pw}}rpx ;height:{{pw*0.6}}rpx' src='{{item.playbill}}'></image>
      </block>

      <block wx:else>
        <view class='activitylist-item-over'>
          <image class='activitylist-item-image-no' style='width: {{pw}}rpx ;height:{{pw*0.6}}rpx' src='{{item.playbill}}'></image>
          <view class='activitylist-item-image-over' style='width: {{pw}}rpx ;height:{{pw*0.6}}rpx;background:#000000;opacity:0.2; border-radius: 18rpx;'></view>
          <image class='activitylist-item-image-over' src='/images/activity_end@3x.png' />
        </view>
      </block>

    </view>
    <view class='activitylist-item-name'>{{item.title}} </view>

  </block>
</scroll-view>
</view>