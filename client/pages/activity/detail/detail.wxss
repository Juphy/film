.activity-detail {
  display: flex;
  flex-direction: column;
}

.activity-detail-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}

.activity-detail-ad-image {
  width: 690rpx;
  height: 380rpx;
  margin-bottom: 30rpx;
}

.activity-detail-text {
  font-size: 24rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.activity-detail-icon {
  width: 112rpx;
  height: 32rpx;
}

.activity-detail-other-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 112rpx;
  height: 32rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-image: url('data:image/png;base64,');
}

.activity-detail-award {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.activity-detail-award-item {
  display: flex;
  flex-direction: column;
}

.activity-detail-award-item-pic {
  width: 300rpx;
  height: 180rpx;
}

.activity-detail-award-item-name {
  font-size: 24rpx;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}

.activity-detail-content {
  display: flex;
  flex-direction: column;
  padding-right: 30rpx;
  padding-left: 30rpx;
}

.activity-detail-foot {
  position: fixed;
  bottom: 0;
}

.activity-detail-foot-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.activity-detail-foot-line {
  width: 100%;
  background: #eaeaea;
  height: 2rpx;
}

.activity-detail-foot {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 98rpx;
  font-size: 24rpx;
}

.activity-detail-foot-mf {
  display: flex;
  flex-direction: row;
  height: 95rpx;
  align-items: center;
}

.activity-detail-foot-wycj {
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  align-items: center;
  justify-content: center;
  height: 95rpx;
}

.activity-detail-foot-share {
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  align-items: center;
  justify-content: center;
}

.activity-detail-foot-mf-line {
  width: 2rpx;
  height: 30rpx;
  background: #eaeaea;
}

.activity-detail-share-btn {
  font-size: 24rpx;
  background: #fff;
  margin: 0rpx;
  padding: 0rpx;
  border-radius: 0;
}

button::after {
  border: none;
}
